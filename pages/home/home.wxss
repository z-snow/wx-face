/* pages/home/home.wxss */
.box {
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 50px;
  width: 100%
}
.camera1 {
  display: block;
}
.box cover-image {
  width: 50px;
  height: 50px;
  opacity: 0.7;
}
.choose {
  position: fixed;
  bottom: 30px;
  left: 50%;
  background-color: yellowgreen;
  transform: translateX(-50%);
  box-shadow: 0 1px 5px #666;
  border-radius:20px ;
}
.face-info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 100px;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: rgba(0,0,0,0.5);
  color: #fff;
}
.face-info-item {
  display: flex;
  width: 80%;
  justify-content: space-between;

}